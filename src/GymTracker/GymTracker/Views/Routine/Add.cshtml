@model GymTrackerShared.Models.Routine

@{
    ViewBag.Title = "Add Routine";
}

<h1 class="mb-3 mt-lg-5 mb-lg-5">Add Routine</h1>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    @Html.LabelFor(r => r.Name, new { @class = "form-label" })
    <div class="form-group mb-3">
        @Html.TextBoxFor(r => r.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", new { @class = "btn btn-outline-secondary" })
}

@section Scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
