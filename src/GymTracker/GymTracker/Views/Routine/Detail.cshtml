@model GymTracker.ViewModels.RoutineDetailViewModel

@{
    ViewBag.Title = "Detail";
}

<a href="@Url.Action("Index", "Routine")" class="d-block mt-3"><i class="fa-regular fa-circle-left fa-lg"></i></a>

<h1 class="text-center mb-3 mt-lg-5 mb-lg-5">@Model.Routine.Name</h1>

@Html.Partial("_Message")

@Html.ActionLink("Add Exercise", "Add", "Exercise", new { routineId = Model.Routine.Id }, new { @class = "btn btn-primary mb-3" })

<div class="">

    @foreach (var trainingDay in Model.Exercises)
    {
     
        <h3>@trainingDay.Key Day</h3>

        <table class="table table-hover">
            @foreach (var exercise in trainingDay)
            {
                <tr>
                    <td class="w-50">@exercise.Name</td>

                    <td class="w-25">
                        <a href="@Url.Action("Detail", "Exercise",
                                            new { Id = exercise.Id, routineId = exercise.RoutineId, dayId = (int)exercise.DayOfTraining })">
                            <span class="fa-solid fa-magnifying-glass"></span>
                        </a>
                    </td>
                    <td class="w-25">
                        <a href="@Url.Action("Edit", "Exercise",
                                            new { Id = exercise.Id, routineId = exercise.RoutineId, dayId = (int)exercise.DayOfTraining })">
                            <span class="fa-regular fa-pen-to-square"></span>
                        </a>
                    </td>
                    <td class="w-25">
                        <a href="@Url.Action("Delete", "Exercise",
                                    new { Id = exercise.Id, routineId = exercise.RoutineId })">
                            <span class="fa-regular fa-trash-can"></span>
                        </a>
                    </td>

                </tr>
            }

        </table>
    }


</div>



