@model GymTracker.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Index";
}

<div class="col-12">
    <div class="mt-3">

        <div class="row">

            <div class="col-12">

                <div class="row">
                    <div class="col-11 col-md-5 col-lg-3 card m-2 shadow-sm">
                        <div class="card-body">
                            <h5 class="text-muted fw-normal fs-5 mt-0">Weight loss</h5>
                            <h3 class="mt-3 mb-3 fs-3">@Model.CaloricDeficit calories</h3>
                        </div>
                    </div>

                    <div class="col-11 col-md-5 col-lg-3 card m-2 shadow-sm">
                        <div class="card-body">
                            <h5 class="text-muted fw-normal fs-5 mt-0">Maintenance</h5>
                            <h3 class="mt-3 mb-3 fs-3">@Model.MaintenanceCalories calories</h3>
                        </div>
                    </div>
                    <div class="col-11 col-md-5 col-lg-3 card m-2 shadow-sm">
                        <div class="card-body">
                            <h5 class="text-muted fw-normal fs-5 mt-0">Weight gain</h5>
                            <h3 class="mt-3 mb-3 fs-3">@Model.CaloricSurplus calories</h3>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

