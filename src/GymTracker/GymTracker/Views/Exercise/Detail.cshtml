@model GymTrackerShared.Models.Exercise
@{
    ViewBag.Title = Model.Name;
}

<div class="mt-3 mt-lg-3">
    <h1 class="mb-1 display-3">@Model.DisplayName</h1>
</div>

<div>
    <a id="exerciseId" name="@Model.Id"></a>
    <a id="routineId" name="@Model.RoutineId"></a>
</div>


<div class="row justify-content-center">

    <div class="col-12">
        <div class="mt-3">

            <div class="row">

                <div class="col-12">

                    <div class="row offset-2">
                        <div class="col-11 col-md-5 col-lg-3 card m-2 shadow">
                            <div class="card-body">
                                <h5 class="text-muted fw-normal fs-5 mt-0">Weight</h5>
                                <h3 class="mt-3 mb-3 fs-3">@Model.Weight lbs</h3>
                            </div>
                        </div>

                        <div class="col-11 col-md-5 col-lg-3 card m-2 shadow">
                            <div class="card-body">
                                <h5 class="text-muted fw-normal fs-5 mt-0">Repetitions</h5>
                                <h3 class="mt-3 mb-3 fs-3">@Model.Repetitions</h3>
                            </div>
                        </div>
                        <div class="col-11 col-md-5 col-lg-3 card m-2 shadow">
                            <div class="card-body">
                                <h5 class="text-muted fw-normal fs-5 mt-0">Sets</h5>
                                <h3 class="mt-3 mb-3 fs-3">@Model.Sets</h3>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>

    <div class="col-12 col-lg-9 mt-lg-4">
        <canvas id="chart" class="mychart shadow"></canvas>
    </div>

</div>

@section Scripts {
    <script src="~/Scripts/graphics-exercise-detail.js"></script>
}