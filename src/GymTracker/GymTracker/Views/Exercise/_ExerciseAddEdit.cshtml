@model GymTracker.ViewModels.ExerciseDaysAddViewModel

@using (Html.BeginForm())
{
    @Html.HiddenFor(vm => vm.Exercise.Id)
    <div class="mb-2">
        @Html.LabelFor(vm => vm.Exercise.MuscleTrained, new { @class = "form-label" })
        @Html.EnumDropDownListFor(vm => vm.Exercise.MuscleTrained, new { @class = "form-select" })
    </div>
    <div class="mb-2">
        @Html.LabelFor(vm => vm.Exercise.Name, new { @class = "form-label" })
        @Html.TextBoxFor(vm => vm.Exercise.Name, new { @class = "form-control" })
    </div>
    <div class="mb-2">
        @Html.LabelFor(vm => vm.Exercise.Weight, new { @class = "form-label" })
        @Html.TextBoxFor(vm => vm.Exercise.Weight, new { @class = "form-control" })
    </div>
    <div class="mb-2">
        @Html.LabelFor(vm => vm.Exercise.Repetitions, new { @class = "form-label" })
        @Html.TextBoxFor(vm => vm.Exercise.Repetitions, new { @class = "form-control" })
    </div>
    <div class="mb-2">
        @Html.LabelFor(vm => vm.Exercise.Sets, new { @class = "form-label" })
        @Html.TextBoxFor(vm => vm.Exercise.Sets, new { @class = "form-control" })
    </div>
    <div class="mb-2">
        @Html.LabelFor(vm => vm.Exercise.DayOfTraining, new { @class = "form-label" })
        @Html.EnumDropDownListFor(vm => vm.Exercise.DayOfTraining, new { @class = "form-select" })
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Cancel", "Detail", "Routine", new { id = Model.RoutineId }, new { @class = "btn btn-outline-secondary" })
    </div>
}
